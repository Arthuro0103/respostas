$valor = (int) fgets(STDIN);
$notas = array(100, 50, 20, 10, 5, 2, 1);
$qtd_notas = array_fill(0, count($notas), 0);
echo $valor . "\n";
for ($i = 0, $size = count($notas); $i < $size; $i++) {
    while ($valor >= $notas[$i]) {
        $valor -= $notas[$i];
        $qtd_notas[$i]++;
    }
}

for ($i = 0, $size = count($notas); $i < $size; $i++) {
    echo $qtd_notas[$i] . " nota(s) de R$ " . number_format($notas[$i], 2, ',', '.') . "\n";
}
