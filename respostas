    500,
    200,
    100,
    50,
    25,
    10,
    5,
    1
];
$quantidades = array_fill(0, count($notas_moedas), 0);
foreach ($notas_moedas as $indice => $valor_nota_moeda) {
    $quantidade = (int) ($centavos / $valor_nota_moeda);
    $centavos -= $quantidade * $valor_nota_moeda;
    $quantidades[$indice] = $quantidade;
}
